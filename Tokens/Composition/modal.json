{
  "modal": {
    "value": {
      "borderRadiusTopLeft": "{radii.xl}",
      "borderRadiusTopRight": "{radii.xl}",
      "borderRadiusBottomRight": "{radii.xl}",
      "borderRadiusBottomLeft": "{radii.xl}",
      "verticalPadding": "{space.gap-9}",
      "horizontalPadding": "{space.gap-9}",
      "itemSpacing": "{space.gap-6}",
      "border": "{default}"
    },
    "type": "composition"
  },
  "default": {
    "value": {
      "style": "solid",
      "width": "{border.sm}",
      "color": "{ref.border.default.enabled}"
