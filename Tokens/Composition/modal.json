  "dotted": {
    "value": {
      "style": "dashed",
      "width": "{border.sm}",
      "color": "{separator.strong}"
    },
    "type": "border"
  },
  "solid": {
    "value": {
      "style": "solid",
      "width": "{border.sm}",
      "color": "{separator.moderate}"
    },
    "type": "border"
  }
